<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    tools:context="com.apitap.views.fragments.Fragment_Ads">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:background="@color/colorGrey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tab_ads"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/colorBlue"
                    android:drawableLeft="@drawable/ic_icon_ads_white"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Ads"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ic_ads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/menu_arrow"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tab_special"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_icon_specials"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Special"
                    android:textColor="#696969"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ic_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/menu_arrow"
                    android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tab_items"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_icon_items"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Items"
                    android:textColor="#696969"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ic_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/menu_arrow"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tab_saved"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:drawableLeft="@drawable/ic_icon_saved"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="Favourites"
                    android:textColor="#696969"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ic_saved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/menu_arrow"
                    android:visibility="invisible" />
            </LinearLayout>

</LinearLayout>
        </LinearLayout>
   <!--     <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rls"
            android:visibility="gone"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp">

            <com.apitap.model.ViewPagerCustomDuration
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator_default"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp" />




        </RelativeLayout>


        <ExpandableListView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_marginTop="6dp"
            android:layout_height="match_parent"
          />



    <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pocket"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true" />
</RelativeLayout>
   <!-- </ScrollView>-->
</LinearLayout>
</RelativeLayout>